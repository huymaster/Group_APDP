@model Course

@{
    ViewData["Title"] = "Edit Course";
}

<h2>@ViewData["Title"]</h2>

@Html.ActionLink("Back to List", "Index")

<div class="form-horizontal">
    <hr/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <div class="row mb-3">
                <label class="control-label col-md-2" for="name"></label>
                <input class="form-control" id="name" type="text" placeholder="Course name"
                       value="@Model.CourseName"/>
            </div>
            <div class="row mb-3">
                <label class="control-label col-md-2" for="name"></label>
                <input class="form-control" id="code" type="text" placeholder="Course code"
                       value="@Model.CourseCode"/>
            </div>
            <div class="row mb-3">
                <label class="control-label col-md-2" for="description"></label>
                <textarea class="form-control" id="description" placeholder="Course description"
                          value="@Model.Description"></textarea>
            </div>
            <div class="row mb-3">
                <label class="control-label col-md-2" for="startDate"></label>
                <input class="form-control" id="startDate" type="date"
                       value="@Model.StartDate.ToString("yyyy-MM-dd")"/>
            </div>
            <div class="row mb-3">
                <label class="control-label col-md-2" for="endDate"></label>
                <input class="form-control" id="endDate" type="date" value="@Model.EndDate.ToString("yyyy-MM-dd")"/>
            </div>
            <div class="row mb-3">
                <label class="control-label col-md-2" for="teacherId"></label>
                <input class="form-control" id="teacherId" type="text" placeholder="Teacher ID"
                       value="@Model.Teacher?.Id"/>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Edit" class="btn btn-primary"/>
        </div>
    </div>
</div>