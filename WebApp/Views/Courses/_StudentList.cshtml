@model IEnumerable<User>?

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th style="width: 20%">Student code</th>
            <th>Full name</th>
            <th style="width: 1%">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var student in Model)
        {
            <tr id="student-row-@student.Id">
                <td>@student.StudentCode</td>
                <td>@student.FullName</td>
                <td>
                    <div class="bin btn-group">
                        <a class="btn btn-sm btn-primary me-1" asp-controller="Students" asp-action="Edit"
                           asp-route-id="@student.Id"
                           asp-route-redirectUrl="@Url.Action("Details", "Courses", new { id = ViewData["CourseId"] })">
                            Edit
                        </a>
                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                data-bs-target="#removeStudentModal"
                                data-student-id="@student.Id">
                            Delete
                        </button>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No students in this course.</p>
}