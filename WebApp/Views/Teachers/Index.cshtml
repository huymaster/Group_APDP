@using Microsoft.AspNetCore.Authorization
@using WebApp.Core
@model X.PagedList.IPagedList<User>
@inject IAuthorizationService auth

@{
    ViewData["Title"] = "Teachers";
    var authResult = await auth.AuthorizeAsync(User, null, Policies.CanManageTeachers);
    ViewBag.HasManageTeachers = authResult.Succeeded;
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.HasManageTeachers)
{
    <a class="btn btn-primary ms-1 mt-2 mb-2" asp-controller="Teachers" asp-action="Add">
        New Teacher
    </a>
}
else
{
    <a class="btn btn-primary disabled ms-1 mt-2 mb-2">
        New Teacher
    </a>
}

<div id="Teachers-container">
    @await Html.PartialAsync("_TeacherListPartial", Model)
</div>

<div class="modal fade" id="deleteTeacherModal" tabindex="-1" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Teacher? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="TeacherIdToDelete"/>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deleteTeacherModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const id = button.data('id');
                const modal = $(this);
                modal.find('#TeacherIdToDelete').val(id);
            });
        });
    </script>
}